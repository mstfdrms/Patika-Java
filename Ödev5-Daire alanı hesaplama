import java.util.Scanner;
public class a {
    public static void main(String[] args) {
        int r;
        double alan, cevre;

        Scanner imp = new Scanner(System.in);
        System.out.println("yarı çap:");
        r=imp.nextInt();

        alan=Math.PI*(r*r);
        cevre=2*Math.PI*r;

        System.out.println("çevre:"+cevre);
        System.out.println("alan:"+alan);
    }
}
