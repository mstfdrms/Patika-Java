import java.util.Scanner;
public class a {
    public static void main(String[] args) {
        int yol;
        double para;
        double km=2.20;
        int sabit=20;
        Scanner imp = new Scanner(System.in);
        System.out.println("km bilgisini gir:");
        yol=imp.nextInt();
        para=sabit+(yol*km);
        if (para<=20){
            para=20;
            System.out.println("ücret:"+para);
        }else {
            System.out.println("ücret:"+para);
        }
    }
}
